<%= form_tag(grabber_path) do %>
  <div class="control-group">
    <%= label_tag :url, "Введите адрес страницы", class: "control-label" %>
    <%= select_tag :scheme,
        options_for_select([["http://", "http"], ["https://", "https"]]), class: "scheme" %>
    <%= text_field_tag :url, nil, placeholder: "www.example.ru"  %>
  </div>
  <%= submit_tag "Поехали", class: "btn btn-success btn-large"%>
<% end %>